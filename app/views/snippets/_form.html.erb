<%= @snippet.errors.full_messages.join(', ') %>

<%= form_for @snippet do |f| %>
<div class="form-group">
  <%= f.label :kind %>
  <%= f.collection_select :kind_id, Kind.all, :id, :name,
  {},
  { class: 'chosen-select form-control' } %>
</div>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :work %>
  <%= f.text_area :work, class: 'form-control', rows: 8 %>
</div>
<div class="form-group">
  <%= f.label :private, class: 'checkbox inline' %>
  <%= f.check_box :is_private, class: 'checkbox inline' %>
</div>
<div class="form-group">
  <%= f.submit 'Save', class: 'btn btn-primary' %>
</div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
      <h1>New Code Snippet</h1>

      <%= @snippet.errors.full_messages.join(', ') %>

      <%= form_for @snippet do |f| %>
      <div class="form-group">
        <%= f.label :kind %>
        <%= f.collection_select :kind_id, Kind.all, :id, :name,
        {},
        { class: 'chosen-select form-control' } %>
      </div>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :work %>
        <%= f.text_area :work, class: 'form-control', rows: 8 %>
      </div>
      <div class="form-group">
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      </div>
      <% end %>

    </div>
    <div class="col-lg-2"></div>
  </div>
</div>
